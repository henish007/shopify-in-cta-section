              <a {% if block.settings.button_link == blank %} {% else %} href="{{ block.settings.button_link }}"{% endif %}>
                {{ block.settings.button_label}}
              </a>
      
        {%- endcase -%}
      {%- endfor -%}
    </div>
  
</div>

